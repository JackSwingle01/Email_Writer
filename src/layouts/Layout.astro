---
import Footer from "../components/Footer.astro";
export interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<Footer></Footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			#da62c4 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #f6f6f6;
	}
	footer {
        text-align: center;
        width: 100%;
        background-color: #f1f1f1;
        padding-top: 2%;
        padding-bottom: 100%;
    }
	button{
        font-family: monospace;
		font-size: 12px;
    }
	select{
		font-family: monospace;
		font-size: 12px;
	}
	input, textarea{
		font-family: monospace;
        width: 100%;
        margin-top: 0;
        margin-bottom: 0;
        padding: 0;
    }
	.input_item{
		margin-bottom: 10px;
	}
	
	#options_div{
        background-color: #f0f0f0;
        border: 1px solid #ccc;
        padding: 15px;
		padding-left: 25px;
		padding-right: 25px;
        margin: 10px;
        font-family: monospace;
        font-size: 13px;
        color: #333;
    }
	#Output_Field {
        white-space: pre-wrap;
        background-color: #f0f0f0;
        border: 1px solid #ccc;
        padding: 10px;
        margin: 10px;
        font-family: monospace;
        font-size: 12px;
        color: #333;
    }
    #Output_Header {
        margin: 20px;
        font-family: monospace;
        
    }
	#buttons_div{
		/* display: flex; */
		/* justify-content: space-between; */
	}
	#editor_div{
		background-color: #f0f0f0;
        border: 1px solid #ccc;
        padding: 15px;
		padding-left: 25px;
		padding-right: 25px;
        margin: 10px;
        font-family: monospace;
        font-size: 13px;
        color: #333;
		display: none;
	}
	#editor_button{
		display: none;
	}
	
</style>
